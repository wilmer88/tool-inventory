   <article class="grid-container">
      <div class="grid-x align-center">
        <div class="cell medium-8">
            <br>
          <div class="blog-post">
            <h4>Created Date: <small>{{foundItem.createdAt}}</small></h4>
             <br>
                  <a class="button secondary" href="/">Back</a>
             <br>
                   <div class="callout">
                   
               <p><strong>Item Name:</strong></p><h3> <bold>{{foundItem.itemName}}</bold></h3>
              </div>
              
             <div class="callout">
               <p><strong>Location/Description:</strong> </p> <h3><bold>{{foundItem.placement}}</bold> </h3>
              </div>
             <div class="callout">
              <p><strong>Serial-Part #:</strong> </p>   <h3>{{foundItem.serial}} </h3>
              </div>
             <div class="callout">
                <p><strong>Count:</strong>  </p>  <h3>{{foundItem.count}} </h3>
              </div>
                 <div class="callout">
                <p><strong> Counted by Name:</strong> </p>  <h3>{{foundItem.countedBy}} </h3>
              </div>
               <div class="callout">
                {{!-- <p><strong> Department: </strong>  </p>  <h3>{{}} </h3> --}}
                <p><strong> Department: </strong>  </p>  <h3>{{foundItem.Department.departmentName}} </h3>
                <p><strong> Department ID: </strong>  </p>  <h3>{{foundItem.DepartmentId}} </h3>


              </div>
            <div class="callout">
              <ul class="menu simple">
                <li><strong>Edited</strong>:{{foundItem.updatedAt}}</li>
                <li><strong>Id</strong> : {{foundItem.id}}</li>
             
             </ul>   
            </div>
             <div class="callout">
             <a class="button expanded" href="/item/{{foundItem.id}}/edit">Edit</a>
              </div>
               <div class="callout">
           
             <a class="button secondary expanded" href="/allItem">Back</a>
              </div>
            
               <a class="button warning secondary expanded" id="delete" data-id="{{foundItem.id}}">Delete Item</a>   
           
              
          </div>
        </div>
      </div>
   </article>

<script>
  $("#delete").on("click", function (){
    const idToDelete = $(this).data("id");
    $.ajax({
      url: `/api/thing/${idToDelete}`,
      method: "DELETE"
    }).then(function (){
     window.location.replace("/");
     alert("successfully deleted selected item")
    })
  })
</script>