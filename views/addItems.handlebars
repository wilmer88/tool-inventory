    <div class="grid-x align-center">
<div class="cell small-6">
         <div class="callout">
             <h1>Add New Item or Tool</h1>
               
<a class="button secondary" href="/allItem">Back</a>
  
              </div>
              <form id="chevy-rider">
<label>
   Item Name:
          <input type="text" value="{{name}}" id="new-name"  aria-label="add tool or item name">
</label>
        
  
<label>
          Department/ Location:
          <input type="text" value="{{placement}}" id="new-location"  aria-label="add location or department">
</label>        
        
   
<label>
         Part Number/ Serial-Number:
          <input type="text" value="{{serial}}" id="new-serial" aria-label="add serial or part number">
</label>
      
   
<label>
      Count:
     <input type="text" value="{{count}}"  id="new-count"  aria-label="add count">
</label>  

<label>
      Counted by Name:
     <input type="text" value="{{countedBy}}"  id="new-countedBy"  aria-label="name of person who counted">
</label> 



        <input type="hidden" value="{{id}}" id="new-id" >

      <button type="submit" class="button success">Add</button>
     </form>
    
    </div>

    </div>

