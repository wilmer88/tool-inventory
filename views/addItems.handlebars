   <br><div class="grid-container full">
 
  <div class="grid-x aligncenter">
    
    <div class="cell small-3"></div>

    <div class="cell small-6">
         <div class="callout">
             <h1>Add New Item or Tool</h1>
              </div>

       <form id="chevy-rider">
       
          Item Name/Tool Name/ Part Name:
          <input type="text" value="{{name}}" id="new-name"  aria-label="add tool or item name">
       
     
     
          department/location:
          <input type="text" value="{{placement}}" id="new-location"  aria-label="add location or department">
        </label>
    
     
          Part Number/serial number:
          <input type="text" value="{{serial}}" id="new-serial" aria-label="add serial or part number">
   


          count:
          <input type="text" value="{{count}}"  id="new-count"  aria-label="add count">
          
     <button type="submit" class="button">Add</button>
     </form><div class="cell small-3"></div>
 </div>
</div>


<script>
  $("chevy-rider").on("submit", function(event){ 
  event.preventDefault();
    const name = $("#new-name").val();
   const placement = $("#new-location").val();
  const serial = $("#new-serial").val();
  const count = $("#new-count").val();
  $.ajax({
    url: `/api/item`,
    method: "POST",
    data: {
      name: name,
      placement: placement,
      serial: serial,
      count: count,
    }
  }).then(function () {
       location.reload();
        })
})
</script>
